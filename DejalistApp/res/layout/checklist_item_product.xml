<?xml version="1.0" encoding="utf-8"?>
<com.luboganev.dejalist.ui.CheckableRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/checklist_row_height"
    android:background="@drawable/card_background"
    android:padding="4dp" >

    <View
        android:id="@+id/checklist_item_product_category"
        android:layout_width="8dp"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/red" />

    <TextView
        android:id="@+id/checklist_item_product_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_toRightOf="@+id/checklist_item_product_image"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:text="TextView"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/primary_text_light" />

    <ImageView
        android:id="@+id/checklist_item_product_image"
        android:layout_width="@dimen/checklist_row_height"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/checklist_item_product_category"
        android:scaleType="centerCrop"
        android:src="@drawable/product_no_pic_small" />

    <ImageView
        android:id="@+id/checklist_item_checked"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignBottom="@+id/checklist_item_product_image"
        android:layout_alignLeft="@+id/checklist_item_product_image"
        android:layout_alignRight="@+id/checklist_item_product_image"
        android:layout_alignTop="@+id/checklist_item_product_image"
        android:background="@color/white_70"
        android:scaleType="center"
        android:src="@drawable/ic_checked"
        android:visibility="invisible" />

</com.luboganev.dejalist.ui.CheckableRelativeLayout>